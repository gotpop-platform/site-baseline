{
  "name": "baseline",
  "version": "1.0.0",
  "description": "Baseline starter kit",
  "main": "packages/server/serve.ts",
  "module": "packages/server/serve.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules bun.lockb packages/*/node_modules packages/*/dist",
    "dev": "PROJECT_ROOT=$PWD bun run --filter server dev",
    "start": "PROJECT_ROOT=$PWD bun run --filter server start",
    "typecheck": "bun run --filter '{server,client,types}' typecheck",
    "time": "bun install --save-text-lockfile"
  },
  "config": {
    "app_site_name": "Baseline",
    "format_date_day": "numeric",
    "format_date_locale": "en-GB",
    "format_date_month": "long",
    "format_date_year": "numeric",
    "server_port": "2000",
    "server_router_style": "nextjs",
    "server_url": "http://localhost:2000",
    "dir_content": "packages/client/blocks",
    "dir_package": "packages/client",
    "dir_pages": "packages/client/pages",
    "dir_public": "packages/client/dist"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "es5",
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "bracketSameLine": false,
    "singleAttributePerLine": false,
    "requirePragma": false
  },
  "private": true,
  "workspaces": [
    "packages/server",
    "packages/client",
    "packages/types"
  ],
  "bun": {
    "version": ">=1.1.39"
  },
  "license": "MIT",
  "peerDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "typescript": "latest"
  },
  "dependencies": {
    "@gotpop-platform/package-baseline": "^0.0.33"
  }
}
