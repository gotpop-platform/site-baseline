{
  "name": "baseline",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "module": "serve.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules bun.lockb packages/*/node_modules",
    "dev": "PROJECT_ROOT=$PWD bun --cwd packages/server dev",
    "start": "bun run workspace:@gotpop-platform/server:start",
    "tsc": "tsc"
  },
  "dependencies": {
    "@gotpop-platform/package-baseline": "0.0.24"
  },
  "peerDependencies": {
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "config": {
    "app_site_name": "Baseline",
    "dir_content": "./src/blocks",
    "dir_pages": "src/pages",
    "dir_public": "dist",
    "format_date_day": "numeric",
    "format_date_locale": "en-GB",
    "format_date_month": "long",
    "format_date_year": "numeric",
    "server_port": "2000",
    "server_router_style": "nextjs",
    "server_url": "http://localhost:2000"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "trailingComma": "es5",
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto",
    "bracketSameLine": false,
    "singleAttributePerLine": false,
    "requirePragma": false
  },
  "private": true,
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "bun": {
    "version": ">=1.1.37"
  },
  "license": "MIT"
}
