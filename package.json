{
  "name": "baseline",
  "module": "server/serve.ts ",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "bun run --watch --inspect serve.ts",
    "start": "bun run serve.ts",
    "clean": "rm -rf dist",
    "preclean": "rm -rf node_modules",
    "tsc": "tsc"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "config": {
    "app_site_name": "Baseline",
    "dir_content": "./src/blocks",
    "dir_pages": "src/pages",
    "dir_public": "dist",
    "format_date_day": "numeric",
    "format_date_month": "long",
    "format_date_year": "numeric",
    "server_port": "2000",
    "server_router_style": "nextjs"
  },
  "bun": {
    "version": ">=1.1.37"
  },
  "peerDependencies": {
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@gotpop-platform/bun-plugin-copy-assets": "^1.0.9",
    "@gotpop-platform/package-baseline": "0.0.5"
  }
}
