{
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxFactory": "jsxFactory",
    "jsxFragmentFactory": "Fragment",
    "baseUrl": ".",
    "paths": {
      "block": ["./block"]
    },
    "types": ["bun"]
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
